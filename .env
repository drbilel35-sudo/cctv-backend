# =============================================
# APPLICATION CONFIGURATION
# =============================================
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# =============================================
# DATABASE CONFIGURATION
# =============================================
MONGODB_URI=mongodb://localhost:27017/cctv_streaming

# =============================================
# AUTHENTICATION & SECURITY
# =============================================
JWT_SECRET=53d23ffecbb5b71cca512558412c617d
JWT_EXPIRES_IN=7d

# =============================================
# STREAMING CONFIGURATION
# =============================================
# RTSP Streaming
RTSP_STREAM_PORT=8000
FFMPEG_PATH=ffmpeg

# HLS Streaming (Recommended for Render)
ENABLE_HLS_STREAMING=true
HLS_SEGMENT_DURATION=4
HLS_LIST_SIZE=6
MAX_CONCURRENT_STREAMS=5

# Streaming Qualities
STREAM_QUALITY_LOW_BITRATE=500k
STREAM_QUALITY_MEDIUM_BITRATE=1000k
STREAM_QUALITY_HIGH_BITRATE=2500k
STREAM_QUALITY_ORIGINAL_BITRATE=5000k

# =============================================
# SECURITY & RATE LIMITING
# =============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# =============================================
# CAMERA DISCOVERY
# =============================================
ONVIF_DISCOVERY_TIMEOUT=5000
NETWORK_SCAN_SUBNET=192.168.1.0/24
CAMERA_HEALTH_CHECK_INTERVAL=30000

# =============================================
# FILE STORAGE
# =============================================
RECORDINGS_DIR=./public/recordings
HLS_OUTPUT_DIR=./public/hls
MAX_RECORDING_FILE_SIZE=1073741824

# =============================================
# LOGGING
# =============================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
